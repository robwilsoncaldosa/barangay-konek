{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/.source": [
        "./.source"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/types",
    ".next/types/**/*.ts",
    ".source/**/*.ts",
    ".next/types/**/*.ts", 
    "blockchain/hardhat.config.ts - copy", 
    "blockchain/scripts/send-op-tx.ts - copy"  ],
  "exclude": [
    "node_modules"
  ]
}
