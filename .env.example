# Supabase Configuration
# Replace these with your actual Supabase project credentials
# NEXT_PUBLIC_* variables are exposed to the client; keep server secrets out of client code
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Supabase Storage Configuration
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=barangay-konek-storage
NEXT_PUBLIC_SUPABASE_STORAGE_PREFIX=documents
# Optional: Signed URL expiry in seconds (default 604800 = 7 days)
NEXT_PUBLIC_SUPABASE_STORAGE_SIGNED_URL_EXPIRY=604800
# Optional: Service role key for server-side uploads (not exposed to client)
SUPABASE_SERVICE_ROLE_KEY=

# S3-Compatible Storage Configuration (if using custom S3 endpoint)
# Leave empty to use default Supabase storage
# SECURITY WARNING: These credentials should ONLY be set in server-side environment
# DO NOT use NEXT_PUBLIC_ prefix for sensitive credentials
S3_ENDPOINT=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
# Optional: Force path style for S3 (some providers require this)
S3_FORCE_PATH_STYLE=false

# SMTP Configuration (for email functionality)
# Provide your SMTP server details; these may be public if used client-side
NEXT_PUBLIC_SMTP_HOST=
NEXT_PUBLIC_SMTP_PORT=
NEXT_PUBLIC_SMTP_USER=
NEXT_PUBLIC_SMTP_PASS=

# Base URL
# The public base URL of your application (e.g., http://localhost:3000 or https://your-domain.com)
NEXT_PUBLIC_BASE_URL=

# Blockchain Configuration
# Smart contract and network settings; never commit real private keys
NEXT_PUBLIC_CONTRACT_ADDRESS=
NEXT_PUBLIC_SEPOLIA_RPC_URL=
NEXT_PUBLIC_SEPOLIA_PRIVATE_KEY=